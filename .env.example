# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=taskmanager
DATABASE_PASSWORD=taskmanager
DATABASE_NAME=taskmanager_db

# Database Connection Pooling (optional)
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=2000

# Database Synchronization
# WARNING: Only set to 'true' in development. NEVER enable in production!
# Use migrations for schema changes in production.
DATABASE_SYNCHRONIZE=false

# Application Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins (e.g., "http://localhost:3000,https://example.com")
# Leave empty in production to deny all origins (must be explicitly set)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Swagger Documentation
# Set to 'true' to enable Swagger in production (not recommended)
ENABLE_SWAGGER=false
